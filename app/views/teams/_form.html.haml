.row
  .col-md-3
  .col-md-6.profile-item
    = form_for @team do |f|
      - if @team.errors.any?
        #error_explanation
          %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
          %ul
            - @team.errors.full_messages.each do |message|
              %li= message

      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :description
        = f.text_area :description, class: 'form-control text-area'
      = f.hidden_field :author_id , :value => current_user.id , class: 'hidden'
      .actions
        .text-right
          = f.submit 'Сохранить', class: "btn btn-success"
  .col-md-3

